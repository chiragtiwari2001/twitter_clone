<% if liked_post?(current_user, post) %>
  <%= button_to '<i class="bi bi-heart-fill"></i>'.html_safe, unlike_post_path(post), method: :delete, class: "btn btn-danger rounded-pill", style: "float:right" %>
<% else %>
  <%= button_to '<i class="bi bi-heart"></i>'.html_safe, like_post_path(post), class: "btn btn-danger rounded-pill", style: "float:right", method: :post%>
<% end %>